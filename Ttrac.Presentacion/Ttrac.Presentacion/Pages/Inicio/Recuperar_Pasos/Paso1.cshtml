@page
@model Ttrac.Presentacion.Pages.Inicio.Recuperar_Pasos.Paso1Model
<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mt-4 bg-light">
            <li class="breadcrumb-item"><a href="/Index"><i class="fas fa-home"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page">Recuperar contraseña</li>
        </ol>
    </nav>
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-110">
            <div class="card o-hidden border-0 shadow-lg my-2">
                <div class="card-body p-4">
                    <!-- Nested Row within Card Body -->
                    <div class="col-lg-6 text-center">
                        <nav>
                            <ul class="nav my-4 mx-3">
                                <li class="nav-item">
                                    <a class="nav-link active btn btn-outline-primary rounded-circle btn-circle mr-2" id="paso1-tab" data-toggle="tab">
                                        <span class="step-number">1</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-primary rounded-circle btn-circle mr-2" id="paso2-tab" data-toggle="tab">
                                        <span class="step-number">2</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-primary rounded-circle btn-circle" id="paso3-tab" data-toggle="tab">
                                        <span class="step-number">3</span>
                                    </a>
                                </li>
                                <li>
                                    <div class="text-center mx-4 my-2">
                                        <h1 class="h4 text-gray-900 mb-4">Recuperar contraseña</h1>
                                    </div>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="card-body p-0">
                        <!-- Contenido anidado dentro del cuerpo de la tarjeta -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-4">
                                    <form>
                                        <!-- Contenido del Paso 1 -->
                                        <div class="tab-pane fade show active">
                                            <label class="mb-3">Por favor Ingresa tu Correo electrónico</label>
                                            <div class="form-floating mb-3">                                              
                                                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                                                <label for="floatingInput">Correo eletrónico</label>
                                                <div class="invalid-feedback">
                                                    Por favor, ingrese un correo electrónico válido.
                                                </div>
                                            </div>                                        
                                            <a href="/Inicio/Recuperar_Pasos/Paso2" class="btn btn-primary btn-block mt-4 btn-lg">
                                                Siguiente
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center">
                                <img src="~/img/recuperar.svg" height="300" alt="Paso 1 del Registro">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
