@page
@model Ttrac.Presentacion.Pages._Generales.IngresoModel
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mt-4 bg-light">
                <li class="breadcrumb-item"><a href="/Index"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page">Ingreso</li>
            </ol>
        </nav>

        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-3">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Ingresa tu cuenta</h1>
                                    </div>
                                <form method="post">
                                       
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" id="floatingInput" name="email" placeholder="Correo eletrónico" required>
                                            <label for="floatingInput">Correo eletrónico</label>
                                        @if (Model.ModelState.TryGetValue("email", out var emailErrors) && emailErrors.Errors.Count > 0)
                                        {
                                            <span class="text-danger">@emailErrors.Errors[0]</span>
                                        }
                                        </div>
                                        <div class="form-floating">
                                            <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password" required>
                                            <label for="floatingPassword">Contraseña</label>
                                        @if (Model.ModelState.TryGetValue("password", out var passwordErrors) && passwordErrors.Errors.Count > 0)
                                        {
                                            <span class="text-danger">@passwordErrors.Errors[0]</span>
                                        }
                                        </div>

                                        <div class="form-group mt-4">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Recuerdame
                                                </label>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-block mt-4 btn-lg">
                                            Iniciar Sesión
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center mt-4">
                                        <a href="/Inicio/Recuperar">¿Olvidaste la contraseña?</a>
                                    </div>
                                    <div class="text-center mt-2">
                                        <a href="/Inicio/Registro">¿No tienes una cuenta? <b>Registrate</b></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>