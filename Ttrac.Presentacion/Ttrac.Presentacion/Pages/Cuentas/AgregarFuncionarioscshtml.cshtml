@page
@model Ttrac.Presentacion.Pages.Cuentas.AgregarFuncionarioscshtmlModel
@{
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mt-4 bg-light">
            <li class="breadcrumb-item"><a href="/Index"><i class="fas fa-home"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page">Agregar Funcionario</li>
        </ol>
    </nav>

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-3">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        @*Primer Colunna*@
                        <div class="col-lg-6">
                            <div class="p-5">
                                <form class="user">
                                    <br>

                                    <div class="text-align-left">
                                        <h6 class="h6 text-gray-900 mb-4 fw-bold">Información de Contacto</h6>

                                        <!-- Formulario para agregar nuevos elementos -->
                                        <div class="col-12 mb-3">
                                            <div class="text-end">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-plus"></i> Agregar
                                                </button>
                                            </div>
                                        </div>

                                        <ul class="list-group">
                                            <!-- Aquí se mostrarán los elementos existentes -->
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">+506 7153 4556</div>
                                                    Teléfono Oficial
                                                </div>
                                                <div>
                                                    <button class="btn btn-sm btn-danger" title="Eliminar">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">info@tecoop.cr</div>
                                                    Correo Eléctronico
                                                </div>
                                                <div>
                                                    <button class="btn btn-sm btn-danger" title="Eliminar">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </div>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div class="fw-bold">www.tecoop.cr</div>
                                                    Web
                                                </div>
                                                <div>
                                                    <button class="btn btn-sm btn-danger" title="Eliminar">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </form>
                            </div>
                        </div>

                        @* Segunda colunna*@

                        <div class="col-lg-6">
                            <form class="user">
                                <br>
                                <div class="form-group row">
                                    <div class="text-align-left">
                                        <h6 class="h6 text-gray-900 mb-4 fw-bold">Datos de la Cuenta</h6>
                                    </div>

                                    <div class="form-floating col-md-5">
                                        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" value="yarmaria22@gmail.com" required>
                                        <label for="floatingInput" class="form-label">
                                            <i class="fas fa-envelope ms-2 me-auto"></i> Correo Eléctronico
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese un correo electrónico válido.
                                        </div>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <div class="text-align-left">
                                        <h6 class="h6 text-gray-900 mb-4 fw-bold">Datos de la Persona Asociada a la Cuenta</h6>
                                    </div>

                                    <div class="form-floating col-md-6 mb-3">
                                        <select class="form-select" id="tipoIdentificacion" aria-label="Default select example">
                                            <option selected disabled value="">Tipo de Identificación...</option>
                                            <option value="1">Cédula Física</option>
                                            <option value="2">Cédula Jurídica</option>
                                        </select>
                                        <label for="tipoIdentificacion">
                                            <i class="fas fa-id-card ms-2 me-auto"></i> Tipo de Identificación
                                        </label>
                                    </div>

                                    <div class="form-floating col-md-5 mb-3">
                                        <input type="text" class="form-control" id="floatingInput" placeholder="Número de Identificación" value="117950605" required>
                                        <label for="floatingInput">
                                            <i class="fas fa-address-card ms-2 me-auto"></i> Identificación
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese una identificación válida.
                                        </div>
                                    </div>


                                    <div class="form-floating col-md-6 mb-3">
                                        <input type="text" class="form-control" id="nombreInput" placeholder="Nombre" value="Yarlín" required>
                                        <label for="nombreInput">
                                            <i class="fas fa-user ms-2 me-auto"></i> Nombre
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese su nombre.
                                        </div>
                                    </div>

                                    <div class="form-floating col-md-5 mb-3">
                                        <input type="text" class="form-control" id="primerApellidoInput" placeholder="Primer Apellido" value="Granados" required>
                                        <label for="primerApellidoInput">
                                            <i class="fas fa-user ms-2 me-auto"></i> Primer Apellido
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese su primer apellido.
                                        </div>
                                    </div>

                                    <div class="form-floating col-md-6 mb-3">
                                        <input type="text" class="form-control" id="segundoApellidoInput" placeholder="Segundo Apellido" value="Solano" required>
                                        <label for="segundoApellidoInput">
                                            <i class="fas fa-user ms-2 me-auto"></i> Segundo Apellido
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese su segundo apellido.
                                        </div>
                                    </div>

                                    <div class="form-floating col-md-5 mb-3">
                                        <input type="date" class="form-control" id="fechaNacimientoInput" value="2000-11-22" required>
                                        <label for="fechaNacimientoInput">
                                            <i class="fas fa-calendar-alt ms-2 me-auto"></i> Fecha de nacimiento
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese su fecha de nacimiento.
                                        </div>
                                    </div>


                                    <div class="form-floating col-md-11 mb-3">
                                        <input type="text" class="form-control" id="nacionalidadInput" placeholder="Nacionalidad" value="Costarricense" required>
                                        <label for="nacionalidadInput">
                                            <i class="fas fa-globe ms-2 me-auto"></i> Nacionalidad
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese su nacionalidad.
                                        </div>
                                    </div>

                                    <div class="form-floating col-md-11 mb-3">
                                        <input type="text" class="form-control" id="direccionInput" placeholder="Dirección" value="Costa Rica. Alajuela, Alajuela, San Antonio" required>
                                        <label for="direccionInput">
                                            <i class="fas fa-map-marker-alt ms-2 me-auto"></i> Dirección
                                        </label>
                                        <div class="invalid-feedback">
                                            Por favor, ingrese la dirección de su residencia.
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-11 mb-3">
                                    <div class="text-center">
                                        <button class="btn btn-primary w-100" type="submit">
                                            <i class="fas fa-user-plus"></i> Agregar Funcionario
                                        </button>
                                    </div>
                                </div>

                                <!-- Botones de Regresar -->
                                <div class="col-md-11 mb-3">
                                    <div class="text-center">
                                        <a class="btn btn-secondary w-100" href="/Cuentas/ListaCuentas">
                                            <i class="fas fa-arrow-left"></i> Regresar
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
